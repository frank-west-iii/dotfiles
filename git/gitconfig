[alias]
  aa = add --all
  amend = !git commit --amend
  amino = !git add --all && git commit --amend --no-edit
  an = add -N .
  b = branch
  bd = branches
  checkpoint = !git aa && git commit -m 'Checkpoint'
  churn = !git log --all -M -C --name-only --format='format:' "$@" | sort | grep -v '^$' | uniq -c | sort -n
  cleanup = !git remote prune origin && git gc
  cleanup-all = !git remote prune origin && git gc && git clean -df && git stash clear
  cm = !git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D
  co = checkout
  cp = cherry-pick
  dm = !git checkout master && git branch --merged | grep -v master | xargs git branch -d
  g = guess
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  message = show -s --format=%B
  pf = push --force-with-lease
  poh = push -u origin HEAD
  rhm = !git checkout master && git fetch && git reset --hard origin/master
  rho = !git fetch && git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)
  squash = !git fetch && git reset --soft HEAD~$(git rev-list --count HEAD ^origin/develop) && git commit
  st = status
  step = !git aa && git commit -m 'Refactor step'
  update = !git checkout master && git fetch && git reset --hard origin/master && git co - && git rebase master
  yesterday = log --reverse --since=1.day --pretty=format:'%s' --author=frank
  friday = log --reverse --since=3.days --pretty=format:'%s' --author=frank
  wip = "!f() { git add --all && git commit -m \"‚úè $*\"; }; f"
  week = log --reverse --since=1.week --pretty=format:'%s'


[color]
  diff = auto
  status = auto
  branch = auto

[color "diff"]
  meta = yellow 

[core]
  excludesfile = ~/.gitignore
  editor = nvim
[apply]
  whitespace = nowarn

[commit]
  template = ~/.gitmessage

[user]
  name = Frank West
  email = frank@getfermentable.com
[push]
	default = simple
[init]
	defaultBranch = main
