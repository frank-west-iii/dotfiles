# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
export EDITOR=vim

ZSH_THEME="robbyrussell"

plugins=(gitfast gem ssh-agent)

alias be='bundle exec'
alias ls='ls -FG'
alias l='ls -l'
alias la='ls -la'
alias c='clear'
alias web='cd ~/code/fermentable-dev/fermentable'
alias fe='cd ~/code/fermentable-dev/fermentable-fe'

alias sz='source ~/.zshrc'

export PATH="$HOME/.bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/opt/go/libexec/bin:/usr/local/sbin"

source $ZSH/oh-my-zsh.sh

zstyle :omz:plugins:ssh-agent agent-forwarding on

