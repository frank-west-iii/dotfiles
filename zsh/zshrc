# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
export EDITOR=nvim

ZSH_THEME="robbyrussell"

plugins=(gitfast gem git ssh-agent asdf)

alias be='bundle exec'
alias c='clear'
alias fe='cd ~/code/fermentable-dev/fermentable-fe'
alias g='git'
alias l='ls -l'
alias la='ls -la'
alias ls='ls -FG'
alias rails-console='bundle exec rails c'
alias rails-server='bundle exec rails s -b 0.0.0.0'
alias sz='source ~/.zshrc'
alias tx=tmuxinator
alias vi='nvim'
alias vim='nvim'

export PATH="$HOME/.bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/sbin"
export PATH="$PATH:$HOME/code/fermentable/bin"

source $ZSH/oh-my-zsh.sh

zstyle :omz:plugins:ssh-agent agent-forwarding on

# bindkey -e; bindkey '\e\e[C' forward-word; bindkey '\e\e[D' backward-word
bindkey "5C" forward-word
bindkey "5D" backward-word

if [ -d ~/.zsh ]; then
  for i in ~/.zsh/*.sh; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi

[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh

. $(brew --prefix asdf)/asdf.sh

autoload -U add-zsh-hook
load-local-conf() {
   if [[ -f .zsh_source && -r .zsh_source ]]; then
     source .zsh_source
   fi
}
add-zsh-hook chpwd load-local-conf
