# Path to your oh-my-zsh installation.
export ZSH=/Users/frank/.oh-my-zsh

ZSH_THEME="robby-modified"

plugins=(gitfast brew gem)

alias be='bundle exec'
alias ls='ls -FG'
alias l='ls -l'
alias la='ls -la'
alias vim='/Applications/MacVim.app/Contents/MacOS/vim'
alias vi='/Applications/MacVim.app/Contents/MacOS/vim'

alias sz='source ~/.zshrc'

export PATH="$HOME/.rbenv/bin:/Users/frank/.rbenv/shims:/Users/frank/.bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

source $ZSH/oh-my-zsh.sh

function trash() { mv $1 ~/.Trash }

bindkey -e; bindkey '\e\e[C' forward-word; bindkey '\e\e[D' backward-word

if [ -d ~/.zsh ]; then
  for i in ~/.zsh/*.sh; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
